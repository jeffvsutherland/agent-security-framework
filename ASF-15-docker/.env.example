# ASF Security Environment Variables
# Copy to .env and fill with secure values
# NEVER commit .env to git!

# Generate secure tokens with: openssl rand -base64 32

# Gateway Authentication (REQUIRED - 32+ chars)
GATEWAY_TOKEN=

# Database Credentials (REQUIRED)
POSTGRES_PASSWORD=

# Redis Authentication (REQUIRED)
REDIS_PASSWORD=

# JWT Signing Secret (REQUIRED - 32+ chars)
JWT_SECRET=

# API Key Salt (REQUIRED)
API_KEY_SALT=

# Webhook Validation (REQUIRED - 32+ chars)
WEBHOOK_SECRET=

# NPM/PyPI tokens for SDK publishing (optional)
NPM_TOKEN=
PYPI_TOKEN=

# Anthropic API Key (for skill verification)
ANTHROPIC_API_KEY=

# VirusTotal API Key (for skill scanning)
VIRUSTOTAL_API_KEY=

# Discord Agent Verification Bot
DISCORD_AGENT_BOT_TOKEN=
VERIFICATION_CHANNEL_ID=
ANNOUNCEMENT_CHANNEL_ID=

# Discord Skill Security Checker Bot  
DISCORD_SKILL_BOT_TOKEN=
SKILL_CHECK_CHANNEL_ID=
SECURITY_ALERT_CHANNEL_ID=

# ASF API Configuration (for Discord bots)
ASF_API_URL=http://asf-api:8080
ASF_API_KEY=

# Logging
LOG_LEVEL=info